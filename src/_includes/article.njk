{% extends "default.njk" %}
{% set type = 'article' %}
{% set navTitle = "Miguel's Blog" %}
{% set headTitle = title + ' | Miguel Tenant de La Tour' %}
{% block og %}
<meta property="og:site_name" content="Miguel Tenant de La Tour's Blog">
<meta property="og:type" content="article">
{% endblock %}
{% block style %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/themes/prism.min.css" integrity="sha256-77qGXu2p8NpfcBpTjw4jsMeQnz0vyh74f5do0cWjQ/Q=" crossorigin="anonymous" />
<link rel="stylesheet" href="/css/blog.css" />
{% endblock %}
{% block main %} 
<section>
    <article class="content" id="article">
        <header class="container" id="article-title">
            <h1 class="title">{{ title }}</h1>
        </header>
        {% if mainImage %}
        <picture id="article-image">
            {% if mainImage.webp %}
            <source type="image/webp" srcset="{{ mainImage.webp }}">
            {% endif %}
            {% if mainImage.png %}
            <source type="image/png" srcset="{{ mainImage.png }}">
            {% endif %}
            {% if mainImage.jpg %}
            <source type="image/jpg" srcset="{{ mainImage.jpg }}">
            {% endif %}
            <img class="project-image" src="{{ mainImage.png if mainImage.png else mainImage.jpg }}" alt="" />
        </picture>
        {% endif %}
        <section class="container" id="article-content">
            {{ content | safe }}
        </section>
    </article>
</section>
{% endblock %}