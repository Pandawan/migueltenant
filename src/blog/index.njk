{% extends "default.njk" %}
{% set type = 'blog' %}
{% set navTitle = "Miguel's Blog" %}
{% set headTitle = 'Blog | Miguel Tenant de La Tour' %}
{% block og %}
<meta property="og:site_name" content="{{title}}">
{% endblock %}
{% block style %}
<link rel="stylesheet" href="https://unpkg.com/prism-theme-one-dark@1.0.0/prism-onedark.css" />
<link rel="stylesheet" href="/css/blog.css" />
{% endblock %}
{% block main %} 
<section class="container" id="blog-home">
    <div class="content">
        {%- for article in collections.article -%}
            {% set content %}
                {% excerpt article %}
            {% endset %}
            {% set footer %}
                <div class="center"><a href="{{article.url}}">Read Article</a></div>
            {% endset %}
            {% from "article.njk" import articleGenerator %}
            {{ articleGenerator(article.data.title, content, footer, article.url) }}
        {%- endfor -%}
    </div>
</section>
{% endblock %}