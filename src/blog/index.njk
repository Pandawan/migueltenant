{% extends "default.njk" %}
{% set title = "Miguel's Blog" %}
{% set type = 'blog' %}
{% block og %}
    <meta property="og:site_name" content="{{title}}">
{% endblock %}
{% block style %}
    <link rel="stylesheet" href="/css/blog.css" />
{% endblock %}
{% block main %} 
    <section class="container" id="blog-home">
        <header id="article-title">
            <h1 class="big-title">{{ title }}</h1>
        </header>
        <div class="content">
            <ul>
                {%- for article in collections.article -%}
                    <li>
                        <a href="{{article.url}}">
                            {{ article.data.title }}
                        </a>
                    </li>
                {%- endfor -%}
            </ul>
        </div>
    </section>
{% endblock %}