---
import type { HTMLAttributes } from "astro/types";
type Props = {
  size?: "large" | "normal";
} & HTMLAttributes<"p">;

const { size = "normal", class: className, ...props } = Astro.props;
---

<p
  class:list={[
    "font-light text-neutral-800 dark:text-neutral-200",
    {
      "text-xl sm:text-2xl lg:text-3xl": size == "large",
      "text-lg sm:text-xl md:text-xl lg:text-2xl": size == "normal",
    },
    className,
  ]}
  {...props}
>
  <slot />
</p>
