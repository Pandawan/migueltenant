---
import {
  SOCIAL_GITHUB,
  SOCIAL_LINKEDIN,
  SOCIAL_MAIL,
  SOCIAL_TWITTER,
} from "src/config";

import GitHubIcon from "@components/svg/GitHubIcon.astro";
import LinkedInIcon from "@components/svg/LinkedInIcon.astro";
import MailIcon from "@components/svg/MailIcon.astro";
import TwitterIcon from "@components/svg/TwitterIcon.astro";

const { class: className, ...props } = Astro.props;
---

<footer class:list={["my-32", className]} {...props}>
  <ul class="flex flex-row justify-center space-x-4 md:space-x-6">
    <!-- <li
      class="text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-200"
    >
      <a href={SOCIAL_TWITTER}>
        <TwitterIcon />
      </a>
    </li> -->
    <li
      class="text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-200"
    >
      <a href={SOCIAL_MAIL} aria-label="Email" title="Email">
        <MailIcon />
      </a>
    </li>
    <li
      class="text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-200"
    >
      <a href={SOCIAL_GITHUB} aria-label="GitHub" title="GitHub">
        <GitHubIcon />
      </a>
    </li>
    <li
      class="text-neutral-600 hover:text-neutral-800 dark:text-neutral-400 dark:hover:text-neutral-200"
    >
      <a href={SOCIAL_LINKEDIN} aria-label="LinkedIn" title="LinkedIn">
        <LinkedInIcon />
      </a>
    </li>
  </ul>
</footer>
