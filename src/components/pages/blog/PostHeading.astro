---
import { format } from "date-fns";

import Heading from "@components/format/text/Heading.astro";
import SubHeading from "@components/format/text/SubHeading.astro";
import Link from "@components/format/links/Link.astro";

interface Props {
  title: string;
  url?: string;
  date: Date;
}

const { title, url, date } = Astro.props;

const formatDate = (date: Date): string => {
  return format(date, "MMMM d, y");
};
---

<Heading class="leading-relaxed">
  {url ? <Link href={url}>{title}</Link> : title}
</Heading>
<SubHeading class="leading-relaxed">
  {formatDate(date)}
</SubHeading>
