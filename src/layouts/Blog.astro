---
import { BLOG_TITLE, BLOG_DESCRIPTION, BLOG_PATH } from "../config";

import Html from "@layouts/Html.astro";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import CenterContainer from "@components/format/containers/CenterContainer.astro";
import type { Props as CenterContainerProps } from "@components/format/containers/CenterContainer.astro";

export type Props = CenterContainerProps;
const props = Astro.props;
---

<Html>
  <head>
    <BaseHead title={BLOG_TITLE} description={BLOG_DESCRIPTION} />
  </head>
  <body>
    <Header title={{ content: BLOG_TITLE, url: BLOG_PATH }} />
    <main>
      <CenterContainer size="large" class="my-16 px-4" {...props}>
        <slot />
      </CenterContainer>
    </main>
    <Footer />
  </body>
</Html>
