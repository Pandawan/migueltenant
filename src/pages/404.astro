---
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

import Html from "@layouts/Html.astro";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Link from "@components/format/links/Link.astro";
import Paragraph from "@components/format/text/Paragraph.astro";
---

<Html>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="flex h-[100dvh] flex-col justify-between">
      <Header title={{ content: "Miguel Tenant de La Tour", url: "/" }} />
      <main>
        <div class="text-center">
          <h1
            class="text-8xl font-semibold text-neutral-800 dark:text-neutral-200"
          >
            404
          </h1>
          <h2 class="text-4xl text-neutral-800 dark:text-neutral-300">
            Not Found
          </h2>
          <Paragraph size="lg" class="my-8">
            Go back <Link href="/">home</Link>?
          </Paragraph>
        </div>
      </main>
      <Footer class="my-4" />
    </div>
  </body>
</Html>
